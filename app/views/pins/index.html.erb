<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><button class="btn btn-default"><%= link_to 'Show', pin %></button></td>
        <% if pin.user == current_user %>
        <td><button class="btn btn-default"><%= link_to 'Edit', edit_pin_path(pin) %></button></td>
        <td><button class="btn btn-default"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
<% end %>